\mode<presentation>

\newif\ifbeamer@invert
\beamer@invertfalse
\DeclareOptionBeamer{invert}[true]{\csname beamer@invert#1\endcsname}

\ProcessOptionsBeamer

\definecolor{headercolor}{rgb}{0.075,0.027,0.412}
\definecolor{canvascolor}{rgb}{0.643,0.690,0.843}

\setbeamercolor*{normal text}{fg=black}
\setbeamercolor*{alerted text}{fg=red!75!black}
\setbeamercolor*{example text}{fg=red!50!headercolor}

\setbeamercolor*{structure}{fg=headercolor}
\setbeamercolor*{titlelike}{fg=headercolor}

\setbeamercolor{palette primary}{use=structure,fg=structure.fg}
\setbeamercolor{palette secondary}{use=structure,fg=structure.fg!75!white}
\setbeamercolor{palette tertiary}{use=structure,fg=structure.fg!50!white}
\setbeamercolor{palette quaternary}{use=structure,fg=structure.fg!25!white}

\setbeamercolor{palette sidebar primary}{use=normal text,fg=normal text.fg}
\setbeamercolor{palette sidebar secondary}{use=structure,fg=structure.fg}
\setbeamercolor{palette sidebar tertiary}{use=normal text,fg=normal text.fg}
\setbeamercolor{palette sidebar quaternary}{use=structure,fg=structure.fg}

\ifbeamer@invert
 \setbeamercolor*{background canvas}{bg=white}
 \setbeamercolor*{section in head/foot}%
  {parent=palette secondary,bg=canvascolor!25!white}
 \setbeamercolor*{subsection in head/foot}%
  {parent=palette tertiary,bg=canvascolor!25!white}
 \setbeamercolor{headline}{bg=canvascolor!25!white}
 \setbeamercolor{footline}{bg=canvascolor!25!white}
\else
 \setbeamercolor*{background canvas}{bg=canvascolor!25!white}
 \setbeamercolor*{section in head/foot}%
  {parent=palette secondary,bg=white}
 \setbeamercolor*{subsection in head/foot}%
  {parent=palette tertiary,bg=white}
 \setbeamercolor{headline}{bg=white}
 \setbeamercolor{footline}{bg=white}
\fi

\setbeamercolor*{frametitle}{use=headline,fg=headercolor,bg=headline.bg}
\setbeamercolor*{sidebar}{bg=canvascolor!50!white}

\setbeamercolor*{upper separation line foot}{fg=canvascolor}
\setbeamercolor*{lower separation line head}{fg=canvascolor}

\mode<all>
